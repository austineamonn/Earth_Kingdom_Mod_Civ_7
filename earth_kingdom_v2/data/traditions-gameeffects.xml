		<Argument name="OnlyWhenTarget">true</Argument>
		<Argument name="Amount">3</Argument>
		<String context="Description">LOC_TRADITION_EARTH_KINGDOM_THE_HUNDRED_YEARS_WAR_DESCRIPTION</String>
