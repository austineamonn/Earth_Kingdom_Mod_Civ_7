	<Modifier id="TRADITION_EARTH_KINGDOM_CONSTRUCTION_MANDATE_MOD_PRODUCTION_EFFICIENCY" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_CONSTRUCTIBLE_PRODUCTION">
