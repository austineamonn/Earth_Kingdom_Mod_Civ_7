<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--	Modern							-->
	<!-- ==================================================	-->
	<!-- Earth Kingdom -->

	<!-- Siege of Ba Sing Se -->
	<Modifier id="TRADITION_EARTH_KINGDOM_EXCESSIVE_TAX_MOD_FOOD_TO_GOLD" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELD_CONVERSION">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_CITY"/>
		</SubjectRequirements>
		<Argument name="FromYieldType">YIELD_FOOD</Argument>
		<Argument name="ToYieldType">YIELD_GOLD</Argument>
		<Argument name="Percent">10</Argument>
		<Argument name="Tooltip">LOC_TRADITION_EARTH_KINGDOM_EXCESSIVE_TAX_NAME</Argument>
		<String context="Description">LOC_TRADITION_EARTH_KINGDOM_EXCESSIVE_TAX_DESCRIPTION</String>
	</Modifier>
	<Modifier id="TRADITION_EARTH_KINGDOM_EXCESSIVE_TAX_MOD_FOOD_TO_GOLD_WAR" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELD_CONVERSION">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_CITY"/>
			<Requirement type="REQUIREMENT_PLAYER_ACTIVE_WARS">
				<Argument Name="DeclaredByOpponent">true</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="FromYieldType">YIELD_FOOD</Argument>
		<Argument name="ToYieldType">YIELD_GOLD</Argument>
		<Argument name="Percent">10</Argument>
		<Argument name="Tooltip">LOC_TRADITION_EARTH_KINGDOM_EXCESSIVE_TAX_NAME</Argument>
	</Modifier>

	<!-- Royal Propaganda -->
	<Modifier id="TRADITION_EARTH_KINGDOM_FEED_THE_QUEEN_MOD_INCREASE_FOOD_PER_SPECIALIST" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_WORKER_YIELD">
		<Argument name="YieldType">YIELD_FOOD</Argument>
		<Argument name="Amount">3</Argument>
		<String context="Description">LOC_TRADITION_EARTH_KINGDOM_FEED_THE_QUEEN_DESCRIPTION</String>
	</Modifier>

	<!-- Omashu Delivery System -->
	<Modifier id="TRADITION_EARTH_KINGDOM_OMASHU_DELIVERY_SYSTEM_MOD_GOLD_PER_IMPORTED_RESOURCE" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_ADJUST_YIELD_PER_RESOURCE">
		<Argument name="YieldType">YIELD_GOLD</Argument>
		<Argument name="Amount">3</Argument>
		<Argument name="Imported">true</Argument>
		<String context="Description">LOC_TRADITION_EARTH_KINGDOM_OMASHU_DELIVERY_SYSTEM_DESCRIPTION</String>
	</Modifier>
	<Modifier id="TRADITION_EARTH_KINGDOM_OMASHU_DELIVERY_SYSTEM_MOD_INCREASE_RESOURCE_CAP" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_RESOURCE_CAP">
		<Argument name="Amount">1</Argument>
	</Modifier>

	<!-- The Hundred Years War -->
	<Modifier id="TRADITION_EARTH_KINGDOM_THE_HUNDRED_YEARS_WAR_MOD_WAR_SUPPORT_ON_DEFENSE" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_DIPLOMATIC_ACTION_TOKEN_BONUS">
		<Argument name="ActionType">DIPLOMACY_ACTION_DECLARE_WAR</Argument>
		<Argument name="OnlyWhenTarget">true</Argument>
		<Argument name="Amount">3</Argument>
		<String context="Description">LOC_TRADITION_EARTH_KINGDOM_THE_HUNDRED_YEARS_WAR_DESCRIPTION</String>
	</Modifier>

</GameEffects>